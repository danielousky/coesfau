= hidden_field_tag 'total_credits', totalCreditsReserved
= hidden_field_tag 'total_subjects', totalSubjectsReserved
- tableColor = (totalCreditsReserved > limitCredits or totalSubjectsReserved > limitSubjects) ? 'table-danger' : 'table-success'

%table.table.table-sm.responsive-table{style: 'height: auto;'}
  %tbody
    %tr{class: tableColor, style: 'height: 10px;'}
      %td{style: 'width: 66%;text-align:right;'} Total Cr√©ditos Seleccionados:
      %td
        %b.text-right#totalNumberOfCredits= totalCreditsReserved
        = "de #{limitCredits} permitidos"
        - if current_user&.admin? and session[:rol].eql? 'admin'
          (Hasta 3 extra) 
    %tr{class: tableColor}
      %td{style: 'width: 66%;text-align:right;height: 10px;'} Total Asignaturas Seleccionadas:
      %td
        %b.text-right#totalNumberOfSubjects= totalSubjectsReserved
        = "de #{limitSubjects} permitidas "
        - if current_user&.admin? and session[:rol].eql? 'admin'
          (Hasta 1 extra) 
