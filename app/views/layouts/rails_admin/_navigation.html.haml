.container-fluid
  %button.btn.btn-warning.rounded-0{"aria-controls" => "offcanvasStart", "data-bs-target" => "#offcanvasStart", "data-bs-toggle" => "offcanvas", type: "button"} 
    %i.fa.fa-bars
    Menú

  %a.navbar-brand.ms-3{:href => dashboard_path}
    = image_tag 'logo_coes_simple.png', size: '35x28'
    = _get_plugin_name[0] || 'Rails'
    %small
      = _get_plugin_name[1] || 'Admin'
  %button.navbar-toggler{"data-bs-target" => "#secondary-navigation", "data-bs-toggle" => "collapse", :type => "button"}
    %span.sr-only
      = t('admin.toggle_navigation')
    %span.navbar-toggler-icon
  =# form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f|
  = form_tag("/admin/user", class: 'd-flex me-3', method: :get, data: { turbo: :false }) do
    - # Le asigna a @value el valor del parámetro 'query' si existe y si la url incluye admin/user
    - @value = params['query'] if request.fullpath.include?('/admin/user')   
    %input.border-0.me-0.form-control{name: :query, "aria-label" => "Buscar", placeholder: "Buscar Usuario", type: "search", value: @value}
    %button.border-0.ms-0.btn.btn-success.rounded-end{type: "submit"} 
      %i.fa-solid.fa-search
  .text-white= "| #{@page_name}"
  #secondary-navigation.collapse.navbar-collapse
    = render partial: 'layouts/rails_admin/secondary_navigation'
