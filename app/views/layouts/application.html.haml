!!!
%html{ lang: "#{I18n.locale}"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Coesfau - Bienvenido
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = stylesheet_link_tag "fontawesome", "data-turbo-track": "reload"
    =# stylesheet_link_tag "style", "data-turbo-track": "reload", id: 'style-switch'
    = stylesheet_link_tag "style-dark", "data-turbo-track": "reload", id: 'style-switch'
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true
    = favicon_link_tag 'ico_logo.png'

  %body
    %main
      %section.p-0.d-flex.align-items-center.position-relative.overflow-hidden
        .container-fluid
          .row
            / left
            .col-12.col-lg-8.d-md-flex.align-items-center.justify-content-center.bg-primary.bg-opacity-10.vh-lg-100
              .p-3.p-lg-5
                / Title
                = render partial: 'layouts/main_banner', locals: {width: '96%', bg_color: ' '}

                / Carousel
                = render partial: 'layouts/carousel', locals: {billboards: Billboard.activas}

            / Right
            .col-12.col-lg-4.m-auto
              .row.my-5
                .col-sm-11.col-xl-8.m-auto
                  = render "shared/flashes"

                  = yield

              / Row END
          / Row END
      / **************** MAIN CONTENT END ****************
      / Back to top
      .back-top
      %i.bi.bi-arrow-up-short.position-absolute.top-50.start-50.translate-middle
