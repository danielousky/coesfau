.table-responsive
	%table.table.table-sm.border.text-center.table-info
		%tr
			%td.text-center Plan de Estudio
			%td.text-center Periodo Ingreso
			%td.text-center Admisi√≥n
			- if grade.registration_status
				%td.text-center Estado de Registro
			- if grade.graduate_status
				%td.text-center Estado de la Carrera
			%td.text-center Estado Permanencia Actual
			- if current_user&.admin?
				%td.text-center Cita horaria
			

		%tr
			%td.text-center.fw-bold= grade.study_plan.desc
			%td.text-center.fw-bold= grade.start_process&.period_name
			%td.text-center.fw-bold= grade.admission_type.name
			- if grade.registration_status
				%td.text-center
					%strong.badge.bg-info.text-dark= grade.registration_status.titleize
			- if grade.graduate_status
				%td.text-center
					%strong.badge.bg-info.text-dark= grade.graduate_status.titleize
			%td.text-center.fw-bold= grade.label_current_permanence_status
			- if current_user&.admin?
				%td.text-center.fw-bold
					%div{title: grade.appointment_from_to}
						=grade.appointment_time_desc_short